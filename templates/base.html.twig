<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Pasaiako Udala - Extranet">
        <meta name="author" content="Pasaiako Udala - Informatika Saila">
        {% block favicon %}
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
            <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}">
        {% endblock %}

        <title>{% block title %}Egoiliarrak{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% endblock %}
    </head>

    {#*****************************************************************************************************
    **** BODY *********************************************************************************************
    ******************************************************************************************************#}

    <body class="{% block body_tag %}{% endblock %}">
        <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Extranet</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">{{ "app.menu.home" | trans }} <span class="sr-only">(current)</span></a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}

                        {#TALDEA#}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="{{ path('taldea_index') }}" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ "app.menu.taldeak" |trans }}</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown03">
                                <a class="dropdown-item" href="{{ path('taldea_index') }}">{{ "app.menu.zerrenda" | trans }}</a>
                                <a class="dropdown-item" href="{{ path('taldea_new') }}">{{ "app.menu.berria" | trans }}</a>
                            </div>
                        </li>

                        {#KARPETA#}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="{{ path('taldea_index') }}" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ "app.menu.karpetak" |trans }}</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown03">
                                <a class="dropdown-item" href="{{ path('karpeta_index') }}">{{ "app.menu.zerrenda" | trans }}</a>
                                <a class="dropdown-item" href="{{ path('karpeta_new') }}">{{ "app.menu.berria" | trans }}</a>
                            </div>
                        </li>
                    {% endif %}



                </ul>
                <form class="form-inline my-2 my-md-0">
                    {#<input class="form-control" type="text" placeholder="Search">#}
                </form>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row">
                {% block sidebar %}

                    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                        <div class="sidebar-sticky">
                        <p>Karpeta nagusiak:</p>

                            {% block sidemenu %}
                                <ul class="nav flex-column">

                                    {% for f in folders %}
                                        <li class="nav-item">
                                            <a class="nav-link active" href="{{ path('dirpath', {'dirpath': f}) }}">
                                                <i class="fas fa-folder"></i><span class="sidebarItem">{{ f }}</span>
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>

                            {% endblock %}
                        </div>
                    </nav>
                {% endblock sidebar %}

                {% block main %}
                    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                {% endblock %}

                    {% block body %}


                    {% endblock %}
                </main>
            </div>
        </div>


        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
