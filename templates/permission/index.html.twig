{% extends 'base.html.twig' %}

{% block title %}Baimenak{% endblock %}

{% block sidebar %}{% endblock %}
{% block main %}
    <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
{% endblock %}

{% block body %}
    <h1>{{ "app.karpeta.zerrenda" |trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "app.crud.Taldeak" | trans }}</th>
                <th>{{ "app.crud.Karpetak" | trans }}</th>
                <th>{{ "app.crud.canWrite" | trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for permission in permissions %}
            <tr>
                <td>{{ permission.taldea }}</td>
                <td>{{ permission.karpeta }}</td>
                <td>{{ permission.canWrite ? 'Bai' : 'Ez' }}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a class="btn btn-sm btn-primary" href="{{ path('permission_edit', {'id': permission.id}) }}">{{ 'app.crud.edit' | trans}}</a></li>
                        <li class="list-inline-item">{{ include('permission/_delete_form.html.twig', { id: permission.id }) }}</li>
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Ez dago ezer erakusteko</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}