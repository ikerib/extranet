{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="row div-breadcrumb">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">{{ "app.breadcrumb.home" | trans }}</a></li>
                </ol>
            </nav>
        </div>
    </div>


    <div class="row">
        <table class="table table-active table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th></th>
                <th style="width: 2%;"></th>
                <th>{{ "Izena" }}</th>
                <th>{{ "Sortua" }}</th>
                <th>{{ "Aldatua" }}</th>
                <th style="width: 5%"></th>
            </tr>
            </thead>
            <tbody>

            {% if app.request.get('_route') == 'homepage' %}
                {% for f in folders %}
                <tr>
                        <td style="width: 2%;"></td>
                        <td style="width: 2%;"><a href="{{ path('dirpath', {'dirpath': currentDir ~ "/" ~ f.foldername}) }}"><span class="mb-4"><i class="fas fa-folder fa-1x"></i></span></a>
                        </td>
                        <td><a href="{{ path('dirpath', {'dirpath': (currentDir=="/" ? "" : currentDir) ~ "/" ~ f.foldername}) }}">{{ f.foldername }}</a></td>
                        <td><a href="{{ path('dirpath', {'dirpath': (currentDir=="/" ? "" : currentDir) ~ "/" ~ f.foldername}) }}">-.-.</a></td>
                        <td><a href="{{ path('dirpath', {'dirpath': (currentDir=="/" ? "" : currentDir) ~ "/" ~ f.foldername}) }}">-.-.</a></td>
                        <td style="width: 5%"></td>
                    </tr>
                {% endfor %}

            {% else %}

                <p>Ez dago ezer erakusteko</p>

            {% endif %}

            </tbody>
        </table>

    </div>




{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script>
        $(document).ready(function () {
            $("#nireAlert").fadeTo(3000, 500).slideUp(500, function () {
                $("#success-alert").slideUp(500);
            });
        });
    </script>

{% endblock %}